<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              style="@style/SelectableItemStyle.RoundedRect"
              android:gravity="center_vertical"
              android:background="@color/material_grey_300"
              android:paddingLeft="@dimen/material_layout_keylines_screen_edge_margin"
              android:paddingRight="@dimen/material_layout_keylines_screen_edge_margin"
              android:layout_height="@dimen/material_layout_vertical_spacing_subtitle">

    <TextView
        android:id="@+id/text"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_normal"
        style="@style/TextStyle.Body1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>