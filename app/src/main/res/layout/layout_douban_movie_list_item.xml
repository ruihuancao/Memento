<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        style="@style/CardStyle"
        android:layout_marginTop="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            style="@style/SelectableItemStyle.Rect"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                style="@style/ImageStyle"
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />


            <LinearLayout
                android:orientation="horizontal"
                android:padding="@dimen/material_layout_vertical_spacing_between_content_areas"
                android:background="@color/material_light_black"
                android:layout_gravity="bottom|end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:ellipsize="end"
                    android:lines="1"
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/director"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/material_layout_keylines_screen_edge_margin"
                    android:text="导演："
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/author"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"/>
            </LinearLayout>


        </FrameLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>